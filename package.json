{
  "name": "redsys-automation",
  "version": "1.0.0",
  "description": "Cypress E2E tests for RedSys CMS automation",
  "main": "index.js",
  "scripts": {
    "open": "cypress open",
    "open:electron": "cypress open --browser electron",
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:record": "cypress run --record",
    "test:brand": "cypress run --spec 'cypress/e2e/brand.cy.js'",
    "test:author": "cypress run --spec 'cypress/e2e/author.cy.js'",
    "test:issue-article": "cypress run --spec 'cypress/e2e/issue-article.cy.js'",
    "test:full-flow": "cypress run --spec 'cypress/e2e/full-flow.cy.js'",
    "test:all": "cypress run --spec 'cypress/e2e/{brand,author,issue-article}.cy.js'"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "automation"
  ],
  "author": "Husam",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^15.9.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}
